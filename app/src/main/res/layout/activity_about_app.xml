<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutAppActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginBottom="40dp">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@mipmap/ic_launcher_foreground"
                android:contentDescription="App Logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Issue Tracker App"
                android:textColor="#1E3A8A"
                android:textSize="28sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Version 1.0.2"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp"
                android:fontFamily="sans-serif" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About the Issue Tracker App"
            android:textColor="#1E3A8A"
            android:textSize="22sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="The Issue Tracker App is a meticulously crafted, open-source solution designed to revolutionize how advisors manage and report issues within the DishTV/D2H ecosystem. Developed independently by Suvojeet, this application stands as a testament to innovative problem-solving, offering a streamlined and user-friendly alternative to traditional, lengthy form submissions."
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:fontFamily="sans-serif" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Bridging the Gap: Google Forms Integration"
            android:textColor="#1E3A8A"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="At its core, the Issue Tracker App seamlessly integrates with the existing Google Form-based issue tracking system previously utilized by DishTV/D2H. This intelligent integration eliminates the cumbersome manual entry process, automatically populating critical data fields within the Google Form. Advisors can now effortlessly record details such as CRM ID, full name, team leader, brand (DISH/D2H), issue type, and precise start and end times directly through the app's intuitive interface. This not only saves valuable time but also significantly reduces the potential for human error, ensuring data accuracy and consistency."
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:fontFamily="sans-serif" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Key Features Designed for Efficiency:"
            android:textColor="#1E3A8A"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <!-- Motive Point 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/checkbox_on_background"
                    android:tint="#3B82F6" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Intuitive User Interface"
                        android:textColor="#1E3A8A"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="A clean, modern, and easy-to-navigate design ensures a smooth user experience for all advisors."
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif" />
                </LinearLayout>
            </LinearLayout>

            <!-- Motive Point 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/checkbox_on_background"
                    android:tint="#3B82F6" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Automated Data Pre-filling"
                        android:textColor="#1E3A8A"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Say goodbye to repetitive typing. The app intelligently pre-fills relevant information into the Google Form, including user details, organization preference, and current date."
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif" />
                </LinearLayout>
            </LinearLayout>

            <!-- Motive Point 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/checkbox_on_background"
                    android:tint="#3B82F6" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dynamic Team Leader Selection"
                        android:textColor="#1E3A8A"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Easily select your team leader from a predefined list or add a new one, ensuring accurate reporting hierarchies."
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif" />
                </LinearLayout>
            </LinearLayout>

            <!-- Motive Point 4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/checkbox_on_background"
                    android:tint="#3B82F6" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Precise Issue Timing"
                        android:textColor="#1E3A8A"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Accurately log the start and end times of issues with a user-friendly time picker, providing comprehensive data for analysis."
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif" />
                </LinearLayout>
            </LinearLayout>

            <!-- Motive Point 5 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/checkbox_on_background"
                    android:tint="#3B82F6" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Persistent Preferences"
                        android:textColor="#1E3A8A"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="The app remembers your organization (DISH/D2H) and other key details, minimizing setup time for subsequent issue reports."
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif" />
                </LinearLayout>
            </LinearLayout>

            <!-- Motive Point 6 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/checkbox_on_background"
                    android:tint="#3B82F6" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="In-App Webview"
                        android:textColor="#1E3A8A"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Experience a fully integrated workflow as the Google Form opens directly within the app, eliminating the need to switch between applications."
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="An Open-Source Initiative for the Community"
            android:textColor="#1E3A8A"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="This Issue Tracker App is a proudly open-source project, built with the community in mind. It is not an official product of DishTV or D2H but rather a dedicated effort by Suvojeet to enhance the daily operations of advisors. Its open-source nature encourages transparency, collaboration, and continuous improvement, allowing for future enhancements and adaptations based on user feedback and evolving needs."
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:fontFamily="sans-serif" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Developed by Suvojeet"
            android:textColor="#1E3A8A"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="This application is the result of Suvojeet's commitment to creating practical and efficient tools that empower users. It reflects a deep understanding of the challenges faced by advisors and a passion for leveraging technology to simplify complex processes."
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:fontFamily="sans-serif" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_gravity="center_horizontal"
            android:text="Â© 2025 Issue Tracker App. All rights reserved."
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            android:fontFamily="sans-serif" />

    </LinearLayout>

</ScrollView>