<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IssueDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Issue Information Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_info_details"
                        android:tint="@color/purple_500" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Issue Information"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/purple_500" />
                </LinearLayout>

                <TextView
                    android:id="@+id/detail_advisor_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Advisor Name: N/A"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/detail_crm_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CRM ID: N/A"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/detail_organization"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Organization: N/A"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/detail_issue_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Issue Type: N/A"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/detail_reason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reason: N/A"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/detail_remarks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Remarks: N/A"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Time Information Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_recent_history"
                        android:tint="@color/purple_500" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Time Information"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/purple_500" />
                </LinearLayout>

                <TextView
                    android:id="@+id/detail_fill_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fill Time: N/A"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/detail_start_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Start Time: N/A"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/detail_end_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="End Time: N/A"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/detail_duration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Duration: N/A"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Attachments Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/attachments_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_gallery"
                        android:tint="@color/purple_500" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Attachments"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/purple_500" />
                </LinearLayout>

                <GridLayout
                    android:id="@+id/attachments_grid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="3"
                    android:rowCount="auto"
                    android:orientation="horizontal"
                    android:alignmentMode="alignBounds"
                    android:columnOrderPreserved="false" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
